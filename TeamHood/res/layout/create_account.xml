<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/orange_bg" >
    
  <LinearLayout 
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center">
       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_in_logo" />
  </LinearLayout>
   <LinearLayout 
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">
      <TextView 
          android:id="@+id/company_text"
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:layout_marginLeft="30dp"
          android:textColor="#fff"
          android:textSize="28dp"
          android:text="Now that you have an account, lets get you\nstarted by createing a :"/>
      <TextView
          android:id="@+id/create_company"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="20dp"
         android:text="COMPANY"
          android:gravity="center"
          android:textSize="28sp"
          android:textColor="#db4d2e"
          android:background="@drawable/white_edit_text"
          />
      <TextView 
          android:id="@+id/create_team"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="10dp"
          android:text="TEAM"
          android:gravity="center"
          android:textSize="28sp"
           android:textColor="#db4d2e"
          android:background="@drawable/white_edit_text"
          />
  </LinearLayout>
</LinearLayout>
