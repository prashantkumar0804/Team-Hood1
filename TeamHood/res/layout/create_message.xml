<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff" >
    
    <RelativeLayout 
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout 
            android:id="@+id/create_message_fram"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            
            <TextView 
                android:id="@+id/create_message_cencel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Cencel"
                android:textColor="#DC755E"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:textSize="@dimen/activity_horizontal_margin"/>
            
             <TextView 
                 android:id="@+id/create_message_header_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Message"
                
                android:textColor="#000"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/activity_horizontal_margin"/>
             <TextView 
                 android:id="@+id/create_message_depoly"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Depoly"
                android:textColor="#DC755E"
                android:gravity="right"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                 android:layout_weight="1"
                android:paddingRight="20dp"
                android:textSize="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/create_message_line_one" 
            android:layout_below="@id/create_message_fram"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/black_line">
            
        </LinearLayout>
        <ScrollView 
            android:id="@+id/create_message_scroll"
            android:layout_below="@id/create_message_line_one"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_above="@+id/create_message_footer"
            >
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <EditText 
                   
                    android:id="@+id/create_message_edit"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:background="#fff"
                   android:hint="Type screen some text"
                    android:textSize="@dimen/activity_horizontal_margin"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout 
            android:id="@+id/create_message_footer"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
             android:layout_alignParentBottom="true">
        <LinearLayout 
            android:id="@+id/create_message_bottom"
            android:layout_above="@+id/footer_datepicker"
        android:background="#E0E0E0"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            >
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
                 <ImageView 
                     android:id="@+id/create_message_set_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
              
                android:background="@drawable/set_time_icon"/>
            </LinearLayout>
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
             <ImageView 
                 android:id="@+id/create_message_camera"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/camera_icon"/>
             </LinearLayout>
              <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
              <ImageView 
                  android:id="@+id/create_message_set_photo"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/photo_icon"/>
              </LinearLayout>
               <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                 android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">
               <ImageView 
                   android:id="@+id/create_message_option"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@drawable/option_opener_icon"/>
               </LinearLayout>
        </LinearLayout>
        <LinearLayout
          
        android:visibility="gone"
       
        android:id="@+id/footer_datepicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
        android:orientation="vertical" >
        
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
 
</LinearLayout>
